version: "3.0"
services:
  selenium-standalone-chrome:
    image: selenium/standalone-chrome
    ports:
      - 4444:4444
      - 7900:7900
      - 80:80
  web:
    build: 
      context: selenium_app/
    image: selenium-app
    ports: 
      - 8080:8080
    command: uvicorn --host=0.0.0.0 --port=8080 main:app


